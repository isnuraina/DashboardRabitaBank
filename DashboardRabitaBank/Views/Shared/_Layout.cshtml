@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Rabita Bank Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no" />
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" />
    <link rel="stylesheet" href="~/assets/css/ready.css" />
    <link rel="stylesheet" href="~/assets/css/demo.css" />
</head>
<body style="font-family:'Nunito', sans-serif; background-color:#0b0b0b; margin:0; overflow-x:hidden;">

    <!-- Header -->
    <div class="main-header" style="position: fixed; top:0; width:100%; z-index:1030; background: linear-gradient(135deg,#28a745,#7fffd4); box-shadow: 0 10px 25px rgba(0,255,128,0.3); display:flex; justify-content:space-between; align-items:center; padding:0.5rem 2rem; border-bottom-left-radius:25px; border-bottom-right-radius:25px; transition:0.3s;">
        <div>
            <img src="~/assets/svgs/rabitebank.svg" alt="Logo" style="width:70px; height:70px; border-radius:50%; object-fit:contain; box-shadow:0 0 15px #28a745; transition: transform 0.3s, box-shadow 0.3s;" onmouseover="this.style.transform='rotateY(20deg) scale(1.1)'; this.style.boxShadow='0 0 30px #00ff7f'" onmouseout="this.style.transform='rotateY(0deg) scale(1)'; this.style.boxShadow='0 0 15px #28a745'">
        </div>
        <div style="color:#0f0; font-weight:bold; font-size:1.4rem; text-shadow:0 0 8px #00ff7f;">Rabita Bank Dashboard</div>
        <ul class="navbar-nav topbar-nav ml-md-auto align-items-center" style="list-style:none; display:flex; margin:0; padding:0;">
            <li class="nav-item dropdown">
                <a class="dropdown-toggle profile-pic" data-toggle="dropdown" asp-controller="dashboard" asp-action="index" aria-expanded="false" style="display:flex; align-items:center; text-decoration:none; color:#0f0;">
                    <img src="~/assets/img/rabitalogo.png" alt="user-img" width="45" class="img-circle" style="border-radius:50%; margin-right:8px; object-fit:contain;">
                    <span>Information</span>
                </a>
                <ul class="dropdown-menu dropdown-user" style="min-width:220px; background:#111; border-radius:15px; box-shadow:0 0 15px #28a745;">
                    <li>
                        <div class="user-box" style="text-align:center; padding:12px;">
                            <div class="u-img"><img src="~/assets/img/rabitalogo.png" alt="user" style="width:60px; border-radius:50%; object-fit:contain; box-shadow:0 0 10px #28a745;"></div>
                            <div class="u-text">
                                <h4 style="margin:5px 0; color:#0f0;">Rabita</h4>
                            </div>
                        </div>
                    </li>
                    <li class="dropdown-divider" style="border-top:1px solid #0f0;"></li>
                    <li><a class="dropdown-item" href="#" style="color:#0f0;"><i class="ti-user"></i> My Profile</a></li>
                    <li><a class="dropdown-item" href="#" style="color:#0f0;"><i class="ti-wallet"></i> My Balance</a></li>
                    <li><a class="dropdown-item" href="#" style="color:#0f0;"><i class="ti-email"></i> Inbox</a></li>
                    <li class="dropdown-divider" style="border-top:1px solid #0f0;"></li>
                    <li><a class="dropdown-item" href="#" style="color:#0f0;"><i class="ti-settings"></i> Account Setting</a></li>
                    <li class="dropdown-divider" style="border-top:1px solid #0f0;"></li>
                    <li><a class="dropdown-item" href="#" style="color:#0f0;"><i class="fa fa-power-off"></i> Logout</a></li>
                </ul>
            </li>
        </ul>
    </div>

    <!-- Sidebar -->
    <div class="wrapper">
        <div class="sidebar" style="width:240px; background:#002200; color:#0f0; position:fixed; top:90px; bottom:0; left:0; padding:1rem; border-top-right-radius:25px; border-bottom-right-radius:25px; box-shadow:0 0 30px rgba(0,255,128,0.4); transform:perspective(1000px) rotateY(-3deg); transition: all 0.3s;" onmouseover="this.style.transform='perspective(1000px) rotateY(0deg)'; this.style.boxShadow='0 0 50px rgba(0,255,128,0.5)'" onmouseout="this.style.transform='perspective(1000px) rotateY(-3deg)'; this.style.boxShadow='0 0 30px rgba(0,255,128,0.4)'">
           
            <ul style="list-style:none; padding:0;">
                <li style="margin-bottom:15px;">
                    <a asp-controller="dashboard" asp-action="index" style="display:flex; align-items:center; padding:14px 12px; border-radius:15px; background:linear-gradient(120deg,#28a745,#71dd8a); box-shadow:0 0 15px #28a745; color:#000; text-decoration:none; font-weight:bold; transition:0.3s;" onmouseover="this.style.transform='scale(1.05)'; this.style.boxShadow='0 0 25px #00ff7f'" onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='0 0 15px #28a745'">
                        <i class="la la-dashboard" style="margin-right:12px; font-size:1.3rem;"></i>
                        <p style="margin:0;">Dashboard</p>
                    </a>
                </li>
                <li style="margin-bottom:15px;">
                    <a asp-controller="users" asp-action="index" style="display:flex; align-items:center; padding:14px 12px; border-radius:15px; background:linear-gradient(120deg,#28a745,#7fff00); box-shadow:0 0 15px #28a745; color:#000; text-decoration:none; font-weight:bold; transition:0.3s;" onmouseover="this.style.transform='scale(1.05)'; this.style.boxShadow='0 0 25px #00ff7f'" onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='0 0 15px #28a745'">
                        <i class="la la-users" style="margin-right:12px; font-size:1.3rem;"></i>
                        <p style="margin:0;">Users</p>
                    </a>
                </li>
            </ul>
        </div>

        <!-- Content -->
        <div class="container" style="margin-left:260px; padding-top:110px;">
            <div style="background:#003300; border-radius:25px; box-shadow:0 0 40px rgba(0,255,128,0.4); padding:2rem; transition: transform 0.3s, box-shadow 0.3s;" onmouseover="this.style.transform='translateY(-10px) scale(1.02)'; this.style.boxShadow='0 0 60px rgba(0,255,128,0.5)'" onmouseout="this.style.transform='translateY(0) scale(1)'; this.style.boxShadow='0 0 40px rgba(0,255,128,0.4)'">
                <h2 style="color:#00ff7f;">Welcome to Rabita Bank Dashboard</h2>
                <p style="color:#a0ffa0;">Manage statistics, users and perform advanced operations with futuristic 3D interface.</p>
                <a asp-controller="dashboard" asp-action="index">
                    <button style="background:#28a745; color:#000; border:none; border-radius:20px; padding:12px 25px; font-weight:bold; cursor:pointer; box-shadow:0 0 20px #28a745; transition: transform 0.2s, box-shadow 0.2s;" onmouseover="this.style.transform='translateY(-3px) scale(1.05)'; this.style.boxShadow='0 0 35px #00ff7f'" onmouseout="this.style.transform='translateY(0) scale(1)'; this.style.boxShadow='0 0 20px #28a745'">Get Started</button>
                </a>
            </div>
            @RenderBody()
        </div>
    </div>

    <!-- Ignore Styles Section -->
    @RenderSection("Styles", required: false)

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/assets/js/plugin/jquery-ui-1.12.1.custom/jquery-ui.min.js"></script>
    <script src="~/assets/js/core/popper.min.js"></script>
    <script src="~/assets/js/plugin/chartist/chartist.min.js"></script>
    <script src="~/assets/js/plugin/chartist/plugin/chartist-plugin-tooltip.min.js"></script>
    <script src="~/assets/js/plugin/bootstrap-notify/bootstrap-notify.min.js"></script>
    <script src="~/assets/js/plugin/bootstrap-toggle/bootstrap-toggle.min.js"></script>
    <script src="~/assets/js/plugin/jquery-mapael/jquery.mapael.min.js"></script>
    <script src="~/assets/js/plugin/jquery-mapael/maps/world_countries.min.js"></script>
    <script src="~/assets/js/plugin/chart-circle/circles.min.js"></script>
    <script src="~/assets/js/plugin/jquery-scrollbar/jquery.scrollbar.min.js"></script>
    <script src="~/assets/js/ready.min.js"></script>
    <script src="~/assets/js/demo.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
