@model List<DashboardRabitaBank.Models.FacebookComment>
@{
    ViewData["Title"] = "Facebook Şərhlər Analizi";
    var stats = ViewBag.Statistics as DashboardRabitaBank.Models.SentimentStatistics;
}

<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
            min-height: 100vh;
            padding: 30px 20px;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            margin-bottom: 40px;
            animation: fadeInDown 0.8s ease;
        }

            .header h1 {
                color: #2e7d32;
                font-size: 2.5rem;
                font-weight: 700;
                margin-bottom: 10px;
                text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
            }

            .header p {
                color: #558b2f;
                font-size: 1.1rem;
            }

        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
            animation: fadeInUp 0.8s ease 0.2s both;
        }

        .stat-card {
            background: white;
            border-radius: 16px;
            padding: 25px;
            box-shadow: 0 8px 24px rgba(46, 125, 50, 0.12);
            transition: all 0.3s ease;
            border-left: 5px solid;
        }

            .stat-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 32px rgba(46, 125, 50, 0.18);
            }

            .stat-card.positive {
                border-left-color: #4caf50;
            }

            .stat-card.negative {
                border-left-color: #ef5350;
            }

            .stat-card.neutral {
                border-left-color: #ffa726;
            }

            .stat-card.total {
                border-left-color: #42a5f5;
            }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 8px;
        }

        .stat-card.positive .stat-number {
            color: #4caf50;
        }

        .stat-card.negative .stat-number {
            color: #ef5350;
        }

        .stat-card.neutral .stat-number {
            color: #ffa726;
        }

        .stat-card.total .stat-number {
            color: #42a5f5;
        }

        .stat-label {
            color: #666;
            font-size: 0.95rem;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .chart-section {
            background: white;
            border-radius: 16px;
            padding: 30px;
            box-shadow: 0 8px 24px rgba(46, 125, 50, 0.12);
            margin-bottom: 40px;
            animation: fadeInUp 0.8s ease 0.4s both;
        }

        .chart-title {
            color: #2e7d32;
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 25px;
            text-align: center;
        }

        .chart-container {
            position: relative;
            height: 350px;
            max-width: 500px;
            margin: 0 auto;
        }

        .table-section {
            background: white;
            border-radius: 16px;
            padding: 30px;
            box-shadow: 0 8px 24px rgba(46, 125, 50, 0.12);
            animation: fadeInUp 0.8s ease 0.6s both;
            overflow: hidden;
        }

        .table-title {
            color: #2e7d32;
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 25px;
        }

        .table-wrapper {
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        thead {
            background: linear-gradient(135deg, #4caf50 0%, #66bb6a 100%);
        }

            thead th {
                color: white;
                padding: 16px;
                text-align: left;
                font-weight: 600;
                font-size: 0.95rem;
                text-transform: uppercase;
                letter-spacing: 0.5px;
            }

        tbody tr {
            border-bottom: 1px solid #e0e0e0;
            transition: all 0.3s ease;
        }

            tbody tr:hover {
                background: #f1f8e9;
                transform: scale(1.01);
            }

        tbody td {
            padding: 16px;
            color: #333;
            font-size: 0.95rem;
        }

        .sentiment-badge {
            display: inline-block;
            padding: 6px 14px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.85rem;
            text-transform: capitalize;
        }

        .sentiment-positive {
            background: #e8f5e9;
            color: #2e7d32;
            border: 1px solid #4caf50;
        }

        .sentiment-negative {
            background: #ffebee;
            color: #c62828;
            border: 1px solid #ef5350;
        }

        .sentiment-neutral {
            background: #fff3e0;
            color: #e65100;
            border: 1px solid #ffa726;
        }

        .comment-text {
            max-width: 400px;
            line-height: 1.6;
            color: #555;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid #4caf50;
        }

        .user-name {
            font-weight: 600;
            color: #2e7d32;
        }

        .post-link {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 8px 16px;
            background: linear-gradient(135deg, #4caf50 0%, #66bb6a 100%);
            color: white;
            text-decoration: none;
            border-radius: 8px;
            font-weight: 500;
            font-size: 0.9rem;
            transition: all 0.3s ease;
        }

            .post-link:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(76, 175, 80, 0.3);
            }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #666;
        }

            .empty-state svg {
                width: 120px;
                height: 120px;
                margin-bottom: 20px;
                opacity: 0.5;
            }

        @@keyframes fadeInDown {
            from

        {
            opacity: 0;
            transform: translateY(-30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        @@media (max-width: 768px) {
            .header h1 {
                font-size: 1.8rem;
            }

            .table-section {
                padding: 20px;
            }

            tbody td {
                padding: 12px 8px;
                font-size: 0.85rem;
            }

            .comment-text {
                max-width: 250px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>🏦 Rabitə Bank - Facebook Şərhlər Analizi</h1>
            <p>Müştəri rəylərinin sentiment təhlili</p>
            @if (ViewBag.Error != null)
            {
                <div style="background: #ffebee; color: #c62828; padding: 15px; border-radius: 8px; margin-top: 20px;">
                    <strong>❌ Xəta:</strong> @ViewBag.Error
                    @if (ViewBag.ErrorDetails != null)
                    {
                        <pre style="margin-top: 10px; font-size: 0.85rem;">@ViewBag.ErrorDetails</pre>
                    }
                </div>
            }
            @if (ViewBag.PostCount != null)
            {
                <p style="margin-top: 10px; color: #666;">
                    📊 Tapılan Post sayı: <strong>@ViewBag.PostCount</strong> |
                    💬 Tapılan Şərh sayı: <strong>@ViewBag.CommentCount</strong>
                </p>
            }
        </div>

        <div class="nav-buttons" style="display: flex; gap: 15px; justify-content: center; margin-bottom: 30px;">
            <a href="/Facebook/Posts" class="nav-btn" style="padding: 12px 24px; background: white; color: #2e7d32; text-decoration: none; border-radius: 8px; font-weight: 600; transition: all 0.3s ease; box-shadow: 0 4px 12px rgba(46, 125, 50, 0.15);">📱 Postlar</a>
            <a href="/Facebook/Comments" class="nav-btn active" style="padding: 12px 24px; background: linear-gradient(135deg, #4caf50 0%, #66bb6a 100%); color: white; text-decoration: none; border-radius: 8px; font-weight: 600; transition: all 0.3s ease; box-shadow: 0 4px 12px rgba(46, 125, 50, 0.15);">💬 Şərhlər</a>
        </div>

        @if (stats != null)
        {
            <div class="stats-container">
                <div class="stat-card positive">
                    <div class="stat-number">@stats.PositiveCount</div>
                    <div class="stat-label">Pozitiv</div>
                </div>
                <div class="stat-card negative">
                    <div class="stat-number">@stats.NegativeCount</div>
                    <div class="stat-label">Neqativ</div>
                </div>
                <div class="stat-card neutral">
                    <div class="stat-number">@stats.NeutralCount</div>
                    <div class="stat-label">Neytral</div>
                </div>
                <div class="stat-card total">
                    <div class="stat-number">@stats.TotalCount</div>
                    <div class="stat-label">Cəmi</div>
                </div>
            </div>

            <div class="chart-section">
                <h2 class="chart-title">📊 Sentiment Paylanması</h2>
                <div class="chart-container">
                    <canvas id="sentimentChart"></canvas>
                </div>
            </div>
        }

        <div class="table-section">
            <h2 class="table-title">💬 Şərhlər Siyahısı</h2>

            @if (Model != null && Model.Any())
            {
                <div class="table-wrapper">
                    <table>
                        <thead>
                            <tr>
                                <th>İstifadəçi</th>
                                <th>Şərh</th>
                                <th>Sentiment</th>
                                <th>Tarix</th>
                                <th>Post</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var comment in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="user-info">
                                            @if (!string.IsNullOrEmpty(comment.UserProfileImageUrl))
                                            {
                                                <img src="@comment.UserProfileImageUrl" alt="@comment.UserName" class="user-avatar" onerror="this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%2240%22 height=%2240%22%3E%3Crect fill=%22%234caf50%22 width=%2240%22 height=%2240%22/%3E%3Ctext x=%2250%25%22 y=%2250%25%22 dominant-baseline=%22middle%22 text-anchor=%22middle%22 fill=%22white%22 font-size=%2218%22 font-weight=%22bold%22%3E@(comment.UserName?.Substring(0, 1).ToUpper())%3C/text%3E%3C/svg%3E'">
                                            }
                                            <span class="user-name">@comment.UserName</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="comment-text">@comment.CommentText</div>
                                    </td>
                                    <td>
                                        @{
                                            var sentimentClass = comment.Analysis?.Sentiment?.ToLower() switch
                                            {
                                                "positive" => "sentiment-positive",
                                                "negative" => "sentiment-negative",
                                                _ => "sentiment-neutral"
                                            };
                                            var sentimentEmoji = comment.Analysis?.Sentiment?.ToLower() switch
                                            {
                                                "positive" => "😊",
                                                "negative" => "😞",
                                                _ => "😐"
                                            };
                                        }
                                        <span class="sentiment-badge @sentimentClass">
                                            @sentimentEmoji @(comment.Analysis?.Sentiment ?? "N/A")
                                        </span>
                                    </td>
                                    <td>@comment.CommentDate</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(comment.FacebookUrl))
                                        {
                                            <a href="@comment.FacebookUrl" target="_blank" class="post-link">
                                                🔗 Posta get
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
                    </svg>
                    <h3>Heç bir şərh tapılmadı</h3>
                    <p>Hazırda göstəriləcək məlumat yoxdur.</p>
                </div>
            }
        </div>
    </div>

    @if (stats != null)
    {
        <script>
            const ctx = document.getElementById('sentimentChart').getContext('2d');
            const sentimentChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Pozitiv', 'Neqativ', 'Neytral'],
                    datasets: [{
                        data: [@stats.PositiveCount, @stats.NegativeCount, @stats.NeutralCount],
                        backgroundColor: [
                            'rgba(76, 175, 80, 0.8)',
                            'rgba(239, 83, 80, 0.8)',
                            'rgba(255, 167, 38, 0.8)'
                        ],
                        borderColor: [
                            'rgba(76, 175, 80, 1)',
                            'rgba(239, 83, 80, 1)',
                            'rgba(255, 167, 38, 1)'
                        ],
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 20,
                                font: {
                                    size: 14,
                                    family: 'Inter',
                                    weight: '600'
                                },
                                usePointStyle: true,
                                pointStyle: 'circle'
                            }
                        },
                        tooltip: {
                            backgroundColor: 'rgba(0, 0, 0, 0.8)',
                            padding: 12,
                            titleFont: {
                                size: 14,
                                weight: 'bold'
                            },
                            bodyFont: {
                                size: 13
                            },
                            callbacks: {
                                label: function(context) {
                                    const label = context.label || '';
                                    const value = context.parsed || 0;
                                    const total = @stats.TotalCount;
                                    const percentage = total > 0 ? ((value / total) * 100).toFixed(1) : 0;
                                    return label + ': ' + value + ' (' + percentage + '%)';
                                }
                            }
                        }
                    },
                    animation: {
                        animateRotate: true,
                        animateScale: true,
                        duration: 1000,
                        easing: 'easeInOutQuart'
                    }
                }
            });
        </script>
    }
</body>
</html>