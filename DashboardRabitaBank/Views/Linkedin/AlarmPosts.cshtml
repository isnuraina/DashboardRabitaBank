@model List<DashboardRabitaBank.Models.LinkedInPost>
@using DashboardRabitaBank.Models

@{
    ViewData["Title"] = "Alarm Postları";
}

<style>
    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
    }

    .page-header {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        padding: 3rem 2rem;
        border-radius: 25px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        margin-bottom: 3rem;
        position: relative;
        overflow: hidden;
    }

        .page-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
            animation: rotate 20s linear infinite;
        }

    @@keyframes rotate {
        from

    {
        transform: rotate(0deg);
    }

    to {
        transform: rotate(360deg);
    }

    }

    .page-header h1 {
        color: white;
        font-weight: 800;
        font-size: 3rem;
        text-shadow: 0 4px 15px rgba(0,0,0,0.3);
        margin: 0;
        position: relative;
        z-index: 1;
    }

    .page-header p {
        color: rgba(255,255,255,0.95);
        font-size: 1.2rem;
        margin: 0;
        position: relative;
        z-index: 1;
    }

    .stats-card {
        background: linear-gradient(135deg, rgba(255,255,255,0.95), rgba(255,255,255,0.85));
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 15px 35px rgba(0,0,0,0.2);
        border: 2px solid rgba(255,255,255,0.3);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        position: relative;
        overflow: hidden;
    }

        .stats-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, transparent 0%, rgba(255,255,255,0.2) 100%);
            opacity: 0;
            transition: opacity 0.3s;
        }

        .stats-card:hover::before {
            opacity: 1;
        }

        .stats-card:hover {
            transform: translateY(-10px) scale(1.02);
            box-shadow: 0 25px 50px rgba(0,0,0,0.3);
        }

    .stats-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        filter: drop-shadow(0 4px 8px rgba(0,0,0,0.2));
    }

    .stats-value {
        font-size: 2.5rem;
        font-weight: 800;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin: 0.5rem 0;
    }

    .stats-label {
        color: #666;
        font-size: 0.95rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .post-card {
        background: linear-gradient(135deg, rgba(255,255,255,0.95), rgba(255,255,255,0.9));
        backdrop-filter: blur(15px);
        border-radius: 25px;
        overflow: hidden;
        box-shadow: 0 20px 60px rgba(0,0,0,0.25);
        margin-bottom: 2rem;
        border: 2px solid rgba(255,255,255,0.4);
        transition: all 0.4s ease;
    }

        .post-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 30px 80px rgba(0,0,0,0.35);
        }

    .post-header {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        padding: 2rem;
        color: white;
        position: relative;
        overflow: hidden;
    }

        .post-header::after {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
            animation: pulse 4s ease-in-out infinite;
        }

    @@keyframes pulse {
        0%, 100%

    {
        opacity: 0.5;
        transform: scale(1);
    }

    50% {
        opacity: 1;
        transform: scale(1.1);
    }

    }

    .post-header-content {
        position: relative;
        z-index: 1;
    }

    .author-name {
        font-size: 1.3rem;
        font-weight: 700;
        text-shadow: 0 2px 10px rgba(0,0,0,0.2);
    }

    .post-date {
        opacity: 0.9;
        font-size: 0.9rem;
    }

    .alarm-badge {
        background: rgba(255,255,255,0.25);
        backdrop-filter: blur(10px);
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-weight: 700;
        border: 2px solid rgba(255,255,255,0.4);
    }

    .post-body {
        padding: 2rem;
    }

    .post-text {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #333;
        margin-bottom: 2rem;
    }

    .comment-card {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
        border-radius: 20px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        border: 2px solid rgba(102, 126, 234, 0.3);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .comment-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            transition: left 0.5s;
        }

        .comment-card:hover::before {
            left: 100%;
        }

        .comment-card:hover {
            transform: translateX(10px);
            box-shadow: -5px 5px 20px rgba(102, 126, 234, 0.3);
        }

    .comment-negative {
        background: linear-gradient(135deg, rgba(245, 87, 108, 0.15), rgba(240, 147, 251, 0.15));
        border-color: rgba(245, 87, 108, 0.4);
    }

    .comment-neutral {
        background: linear-gradient(135deg, rgba(108, 117, 125, 0.1), rgba(173, 181, 189, 0.1));
        border-color: rgba(108, 117, 125, 0.3);
    }

    .user-avatar {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
        font-weight: bold;
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
    }

    .badge-3d {
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.85rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        border: 2px solid rgba(255,255,255,0.3);
        transition: all 0.3s ease;
    }

        .badge-3d:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.3);
        }

    .badge-sentiment {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
    }

    .badge-importance {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
    }

    .badge-purpose {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        color: white;
    }

    .badge-confidence {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        color: white;
    }

    .badge-category {
        background: linear-gradient(135deg, rgba(255,255,255,0.9), rgba(255,255,255,0.7));
        color: #667eea;
        border: 2px solid #667eea;
    }

    .stats-row {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
        padding: 1.5rem;
        border-radius: 15px;
        margin-top: 1.5rem;
    }

    .stat-badge {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-weight: 600;
        margin-right: 1rem;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .linkedin-btn {
        background: linear-gradient(135deg, #0077b5 0%, #00a0dc 100%);
        color: white;
        padding: 0.75rem 2rem;
        border-radius: 50px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        box-shadow: 0 8px 25px rgba(0, 119, 181, 0.4);
        transition: all 0.3s ease;
        border: none;
    }

        .linkedin-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(0, 119, 181, 0.5);
            color: white;
        }

    .alert-custom {
        background: linear-gradient(135deg, rgba(255,255,255,0.95), rgba(255,255,255,0.85));
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 15px 35px rgba(0,0,0,0.2);
        border: 2px solid rgba(102, 126, 234, 0.3);
    }
</style>

<div class="container-fluid mt-4">
    <div class="page-header">
        <div class="page-header-content">
            <h1>
                <i class="fas fa-exclamation-triangle"></i> Alarm Postları
            </h1>
            <p>Təhlükəli və ya diqqət tələb edən kommentlər olan postlar</p>
        </div>
    </div>

    <!-- Statistika kartları -->
    <div class="row mb-5">
        <div class="col-md-3 mb-4">
            <div class="stats-card text-center">
                <div class="stats-icon">
                    <i class="fas fa-fire-alt"></i>
                </div>
                <div class="stats-value">@ViewBag.TotalAlarms</div>
                <div class="stats-label">Alarm Postları</div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="stats-card text-center">
                <div class="stats-icon">
                    <i class="fas fa-comments"></i>
                </div>
                <div class="stats-value">@ViewBag.TotalAlarmComments</div>
                <div class="stats-label">Alarm Kommentləri</div>
            </div>
        </div>
        <div class="col-md-2 mb-4">
            <div class="stats-card text-center">
                <div class="stats-icon">
                    <i class="fas fa-sad-tear"></i>
                </div>
                <div class="stats-value">@ViewBag.NegativeSentiments</div>
                <div class="stats-label">Neqativ</div>
            </div>
        </div>
        <div class="col-md-2 mb-4">
            <div class="stats-card text-center">
                <div class="stats-icon">
                    <i class="fas fa-meh"></i>
                </div>
                <div class="stats-value">@ViewBag.NeutralSentiments</div>
                <div class="stats-label">Neytral</div>
            </div>
        </div>
        <div class="col-md-2 mb-4">
            <div class="stats-card text-center">
                <div class="stats-icon">
                    <i class="fas fa-smile"></i>
                </div>
                <div class="stats-value">@ViewBag.PositiveSentiments</div>
                <div class="stats-label">Pozitiv</div>
            </div>
        </div>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert-custom text-center">
            <i class="fas fa-info-circle fa-3x mb-3" style="color: #667eea;"></i>
            <h4>Hal-hazırda alarm postu yoxdur</h4>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag.DebugInfo))
        {
            <div class="alert alert-warning mt-3">
                <strong>Debug Info:</strong> @ViewBag.DebugInfo
            </div>
        }
    }
    else
    {
        <div class="row">
            @foreach (var post in Model)
            {
                var alarmComments = post.Comments?.Where(c => c.Analysis?.IsAlarm == false).ToList() ?? new List<LinkedInComment>();

                <div class="col-12 mb-4">
                    <div class="post-card">
                        <div class="post-header">
                            <div class="post-header-content">
                                <div class="row align-items-center">
                                    <div class="col-md-8">
                                        <div class="author-name">@post.Author?.Name</div>
                                        <div class="post-date">
                                            <i class="far fa-clock"></i> @post.PostedAt?.Date
                                        </div>
                                    </div>
                                    <div class="col-md-4 text-end">
                                        <span class="alarm-badge">
                                            <i class="fas fa-bell"></i> @alarmComments.Count Alarm
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="post-body">
                            <div class="post-text">@post.Text</div>

                            <h5 class="mb-3" style="color: #667eea; font-weight: 700;">
                                <i class="fas fa-exclamation-circle"></i> Alarm Kommentlər
                            </h5>

                            @foreach (var comment in alarmComments)
                            {
                                var commentClass = comment.Analysis?.Sentiment switch
                                {
                                    "negative" => "comment-negative",
                                    "neutral" => "comment-neutral",
                                    _ => ""
                                };

                                <div class="comment-card @commentClass">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="d-flex align-items-start">
                                                <div class="user-avatar me-3">
                                                    @(comment.Actor?.Name?.Substring(0, 1).ToUpper() ?? "?")
                                                </div>
                                                <div class="flex-grow-1">
                                                    <div class="mb-2">
                                                        <strong style="font-size: 1.1rem; color: #333;">@comment.Actor?.Name</strong>
                                                        <div style="font-size: 0.9rem; color: #666; margin-top: 0.25rem;">
                                                            <i class="fas fa-briefcase"></i> @comment.Actor?.Position
                                                        </div>
                                                    </div>
                                                    <p style="font-size: 1rem; color: #444; margin: 0;">@comment.Commentary</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="d-flex flex-column gap-2">
                                                <span class="badge-3d badge-sentiment">
                                                    <i class="fas fa-heart"></i> @(comment.Analysis?.Sentiment ?? "N/A")
                                                </span>
                                                <span class="badge-3d badge-importance">
                                                    <i class="fas fa-star"></i> @(comment.Analysis?.Importance ?? "N/A")
                                                </span>
                                                <span class="badge-3d badge-purpose">
                                                    <i class="fas fa-bullseye"></i> @(comment.Analysis?.Purpose ?? "N/A")
                                                </span>
                                                <span class="badge-3d badge-confidence">
                                                    <i class="fas fa-chart-line"></i> @((comment.Analysis?.Confidence ?? 0).ToString("P0"))
                                                </span>
                                            </div>
                                        </div>
                                    </div>

                                    @if (comment.Analysis?.Categories?.Any() == true)
                                    {
                                        <div class="mt-3">
                                            @foreach (var category in comment.Analysis.Categories)
                                            {
                                                <span class="badge-3d badge-category me-2">
                                                    <i class="fas fa-tag"></i> @category
                                                </span>
                                            }
                                        </div>
                                    }
                                </div>
                            }

                            <div class="stats-row d-flex justify-content-between align-items-center flex-wrap">
                                <div class="d-flex gap-2 flex-wrap">
                                    <span class="stat-badge">
                                        <i class="fas fa-thumbs-up"></i> @(post.Stats?.Like ?? 0)
                                    </span>
                                    <span class="stat-badge">
                                        <i class="fas fa-heart"></i> @(post.Stats?.Love ?? 0)
                                    </span>
                                    <span class="stat-badge">
                                        <i class="fas fa-comment"></i> @(post.Comments?.Count ?? 0)
                                    </span>
                                    <span class="stat-badge">
                                        <i class="fas fa-retweet"></i> @(post.Stats?.Reposts ?? 0)
                                    </span>
                                </div>
                                <a href="@post.PostUrl" target="_blank" class="linkedin-btn mt-2 mt-md-0">
                                    <i class="fab fa-linkedin"></i> LinkedIn-də Aç
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>