                                    </div>
                                    <div class="post-meta">
                                        <div class="meta-item">
                                            <i class="fas fa-user-circle"></i>
                                            <strong>@post.PostInfo?.OwnerUsername</strong>
                                        </div>
                                        <div class="meta-item">
