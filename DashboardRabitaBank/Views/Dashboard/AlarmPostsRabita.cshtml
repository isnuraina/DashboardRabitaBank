                        <i class="fas fa-database mr-2"></i>Mənbə: @source
                    </div>
                </div>
            </div>

            @if (Model == null || !Model.Any())
            {
                <div class="success-card">
                    <h4>✨ Təmiz Vəziyyət!</h4>
