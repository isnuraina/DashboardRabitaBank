@model List<DashboardRabitaBank.Models.GoogleReview>

@{
    ViewData["Title"] = "RabitaBank Corporate Google Reviews";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-success">@ViewData["Title"]</h2>

    <table class="table table-striped table-hover shadow-sm rounded">
        <thead class="table-success">
            <tr>
                <th>User Image</th>
                <th>User Name</th>
                <th>Review</th>
                <th>Score</th>
                <th>Sentiment</th>
                <th>Purpose</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model)
            {
                <tr>
                    <td>
                        <img src="@review.UserImage" style="width:50px;height:50px;border-radius:50%;" />
                    </td>
                    <td>@review.UserName</td>
                    <td>@review.Content</td>
                    <td>@review.Score</td>
                    <td>@review.Analysis?.Sentiment</td>
                    <td>@review.Analysis?.Purpose</td>
                    <td>@review.At.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
