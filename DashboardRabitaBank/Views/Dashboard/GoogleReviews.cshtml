@model Tuple<List<DashboardRabitaBank.Models.GoogleReview>, List<DashboardRabitaBank.Models.GoogleReview>>

@{
    ViewData["Title"] = "Google Reviews";
    var bankReviews = Model.Item1;
    var juniorReviews = Model.Item2;
}

@section Styles {
    <style>
        body {
            background: linear-gradient(135deg, #e8f5e9, #f1f8e9);
            font-family: 'Nunito', sans-serif;
        }

        h2.page-title {
            padding-top: 80px;
            margin-bottom: 50px;
            color: #2e7d32;
            font-weight: 800;
            text-shadow: 2px 2px 6px rgba(0,0,0,0.15);
        }

        .review-card {
            background: #fff;
            border-radius: 16px;
            padding: 25px 20px;
            margin-bottom: 30px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
            transform: perspective(1000px) rotateX(0deg);
            transition: all 0.4s ease;
            border-left: 6px solid #43a047;
        }

            .review-card:hover {
                transform: perspective(1000px) rotateX(3deg) scale(1.02);
                box-shadow: 0 15px 35px rgba(0,0,0,0.25);
            }

            .review-card h5 {
                color: #2e7d32;
                font-weight: 700;
            }

            .review-card p {
                font-size: 15px;
                line-height: 1.6;
                color: #333;
            }

        .badge-sentiment {
            font-weight: 600;
            margin-right: 10px;
            padding: 8px 12px;
            border-radius: 20px;
            box-shadow: 0 3px 8px rgba(0,0,0,0.15);
        }

            .badge-sentiment.bg-info {
                background: linear-gradient(135deg, #4caf50, #81c784);
                color: #fff;
            }

            .badge-sentiment.bg-secondary {
                background: linear-gradient(135deg, #66bb6a, #a5d6a7);
                color: #fff;
            }

        .nav-tabs {
            border-bottom: none;
            justify-content: center;
        }

            .nav-tabs .nav-link {
                font-weight: 600;
                color: #2e7d32;
                background: #c8e6c9;
                border-radius: 10px 10px 0 0;
                margin: 0 5px;
                transition: all 0.3s;
            }

                .nav-tabs .nav-link.active {
                    background: linear-gradient(135deg, #43a047, #66bb6a);
                    color: #fff;
                    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
                }

        .tab-content {
            padding-top: 40px;
        }
    </style>
}

<div class="container mt-5 pt-5">
    <h2 class="page-title text-center">Rabita Google Reviews</h2>

    <ul class="nav nav-tabs mb-4" id="reviewsTab" role="tablist">
        <li class="nav-item" role="presentation">
            <a asp-controller="GoogleReview" asp-action="RabitaBankCorporate">
            <button class="nav-link active" id="bank-tab" data-bs-toggle="tab" data-bs-target="#bank" type="button" role="tab">RabitaBank Corporative</button>
            </a>
        </li>
      
        <li class="nav-item" role="presentation">
            <a asp-controller="GoogleReview" asp-action="RabitaBank">

            <button class="nav-link" id="junior-tab" data-bs-toggle="tab" data-bs-target="#junior" type="button" role="tab">Rabita Bank</button>
            </a>
        </li>
    </ul>

    <div class="tab-content" id="reviewsTabContent">
        <!-- RabitaBank Tab -->
        <div class="tab-pane fade show active" id="bank" role="tabpanel">
            @foreach (var review in bankReviews)
            {
                <div class="review-card">
                    <div class="d-flex align-items-center mb-3">
                        <img src="@review.UserImage" class="rounded-circle shadow" style="width:55px; height:55px; border:2px solid #43a047;" />
                        <div class="ms-3">
                            <h5>@review.UserName</h5>
                            <p class="text-muted mb-0">⭐ @review.Score | @review.At.ToString("yyyy-MM-dd")</p>
                        </div>
                    </div>
                    <p>@review.Content</p>

                    @if (review.Analysis != null)
                    {
                        <span class="badge badge-sentiment bg-info">Sentiment: @review.Analysis.Sentiment</span>
                        <span class="badge badge-sentiment bg-secondary">Purpose: @review.Analysis.Purpose</span>
                    }
                </div>
            }
        </div>

        <!-- RabitaJunior Tab -->
        <div class="tab-pane fade" id="junior" role="tabpanel">
            @foreach (var review in juniorReviews)
            {
                <div class="review-card">
                    <div class="d-flex align-items-center mb-3">
                        <img src="@review.UserImage" class="rounded-circle shadow" style="width:55px; height:55px; border:2px solid #43a047;" />
                        <div class="ms-3">
                            <h5>@review.UserName</h5>
                            <p class="text-muted mb-0">⭐ @review.Score | @review.At.ToString("yyyy-MM-dd")</p>
                        </div>
                    </div>
                    <p>@review.Content</p>

                    @if (review.Analysis != null)
                    {
                        <span class="badge badge-sentiment bg-info">Sentiment: @review.Analysis.Sentiment</span>
                        <span class="badge badge-sentiment bg-secondary">Purpose: @review.Analysis.Purpose</span>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
}
