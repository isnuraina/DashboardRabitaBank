@model Tuple<List<DashboardRabitaBank.Models.GoogleReview>, List<DashboardRabitaBank.Models.GoogleReview>>

@{
    ViewData["Title"] = "Google Reviews";
    var bankReviews = Model.Item1;
    var juniorReviews = Model.Item2;
}

@section Styles {
    <style>
        body {
            background-color: #f8f9fa;
        }

        .review-card {
            border-left: 5px solid #0d6efd;
            background: linear-gradient(135deg, #ffffff, #e9f1ff);
            padding: 25px 20px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            margin-bottom: 25px;
        }

            .review-card h5 {
                color: #0d6efd;
            }

        .badge-sentiment {
            font-weight: 500;
            margin-right: 8px;
        }

        .tab-content {
            padding-top: 40px; /* burada padding-top artırıldı */
        }

        .nav-tabs .nav-link.active {
            background-color: #0d6efd;
            color: #fff;
            border-radius: 8px 8px 0 0;
        }

        .nav-tabs .nav-link {
            border-radius: 8px 8px 0 0;
        }
    </style>
}

<div class="container mt-5 pt-5">
    <h2 class="mb-4 text-center text-primary">Rabita Google Reviews</h2>

    <ul class="nav nav-tabs mb-4" id="reviewsTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="bank-tab" data-bs-toggle="tab" data-bs-target="#bank" type="button" role="tab">RabitaBank</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="junior-tab" data-bs-toggle="tab" data-bs-target="#junior" type="button" role="tab">RabitaJunior</button>
        </li>
    </ul>

    <div class="tab-content" id="reviewsTabContent">
        <!-- RabitaBank Tab -->
        <div class="tab-pane fade show active" id="bank" role="tabpanel">
            @foreach (var review in bankReviews)
            {
                <div class="review-card">
                    <div class="d-flex align-items-center mb-3">
                        <img src="@review.UserImage" class="rounded-circle" style="width:50px; height:50px;" />
                        <div class="ms-3">
                            <h5>@review.UserName</h5>
                            <p class="text-muted mb-0">⭐ @review.Score | @review.At.ToString("yyyy-MM-dd")</p>
                        </div>
                    </div>
                    <p>@review.Content</p>

                    @if (review.Analysis != null)
                    {
                        <span class="badge bg-info badge-sentiment">Sentiment: @review.Analysis.Sentiment</span>
                        <span class="badge bg-secondary badge-sentiment">Purpose: @review.Analysis.Purpose</span>
                    }
                </div>
            }
        </div>

        <!-- RabitaJunior Tab -->
        <div class="tab-pane fade" id="junior" role="tabpanel">
            @foreach (var review in juniorReviews)
            {
                <div class="review-card">
                    <div class="d-flex align-items-center mb-3">
                        <img src="@review.UserImage" class="rounded-circle" style="width:50px; height:50px;" />
                        <div class="ms-3">
                            <h5>@review.UserName</h5>
                            <p class="text-muted mb-0">⭐ @review.Score | @review.At.ToString("yyyy-MM-dd")</p>
                        </div>
                    </div>
                    <p>@review.Content</p>

                    @if (review.Analysis != null)
                    {
                        <span class="badge bg-info badge-sentiment">Sentiment: @review.Analysis.Sentiment</span>
                        <span class="badge bg-secondary badge-sentiment">Purpose: @review.Analysis.Purpose</span>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
}
