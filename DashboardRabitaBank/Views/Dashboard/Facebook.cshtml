<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rabita Facebook Reviews</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --facebook-blue: #1877F2;
            --facebook-light-blue: #42A5F5;
            --facebook-dark-blue: #166FE5;
            --facebook-green: #42B883;
            --facebook-gray: #65676B;
            --facebook-light-gray: #F0F2F5;
            --facebook-dark: #1C1E21;
            --facebook-white: #FFFFFF;
            --shadow-light: 0 4px 20px rgba(24, 119, 242, 0.15);
            --shadow-medium: 0 8px 30px rgba(24, 119, 242, 0.25);
            --shadow-heavy: 0 15px 50px rgba(24, 119, 242, 0.35);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: linear-gradient(135deg, #f0f6ff 0%, #e6f2ff 50%, #dbeafe 100%);
            min-height: 100vh;
            color: var(--facebook-dark);
            overflow-x: hidden;
        }

        .main-container {
            min-height: 100vh;
            padding-top: 2rem;
        }

        .page-header {
            text-align: center;
            margin-bottom: 3rem;
            transform: translateY(0);
            animation: slideInDown 0.8s ease-out;
        }

        .page-title {
            font-size: 3.8rem;
            font-weight: 900;
            background: linear-gradient(135deg, var(--facebook-blue), var(--facebook-light-blue), var(--facebook-dark-blue));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 1rem;
            text-shadow: none;
            letter-spacing: -0.03em;
            position: relative;
        }

            .page-title::after {
                content: '';
                position: absolute;
                bottom: -10px;
                left: 50%;
                transform: translateX(-50%);
                width: 100px;
                height: 4px;
                background: linear-gradient(90deg, var(--facebook-blue), var(--facebook-light-blue));
                border-radius: 2px;
                animation: shimmer 2s ease-in-out infinite;
            }

        @@keyframes shimmer {
            0%, 100%

        {
            opacity: 1;
            transform: translateX(-50%) scale(1);
        }

        50% {
            opacity: 0.7;
            transform: translateX(-50%) scale(1.1);
        }

        }

        .page-subtitle {
            color: var(--facebook-gray);
            font-size: 1.3rem;
            font-weight: 500;
            margin-top: 1.5rem;
        }

        .nav-tabs-container {
            display: flex;
            justify-content: center;
            margin-bottom: 3rem;
            perspective: 1200px;
        }

        .nav-tabs {
            border: none;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(25px);
            border-radius: 25px;
            padding: 10px;
            box-shadow: var(--shadow-light);
            transform: translateZ(0) rotateX(0deg);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            border: 2px solid rgba(24, 119, 242, 0.1);
        }

            .nav-tabs:hover {
                transform: translateY(-5px) rotateX(2deg);
                box-shadow: var(--shadow-medium);
                border-color: rgba(24, 119, 242, 0.2);
            }

        .nav-link {
            border: none !important;
            border-radius: 20px !important;
            padding: 18px 36px !important;
            font-weight: 700;
            font-size: 1.05rem;
            color: var(--facebook-gray);
            background: transparent;
            transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
            margin: 0 6px;
            text-decoration: none;
            display: inline-block;
            transform: translateZ(0);
        }

            .nav-link::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: linear-gradient(135deg, var(--facebook-blue), var(--facebook-light-blue));
                opacity: 0;
                transition: all 0.5s ease;
                border-radius: 20px;
                z-index: -1;
                transform: scale(0.8);
            }

            .nav-link::after {
                content: '';
                position: absolute;
                top: 2px;
                left: 2px;
                right: 2px;
                bottom: 2px;
                background: linear-gradient(135deg, rgba(24, 119, 242, 0.1), rgba(66, 165, 245, 0.1));
                opacity: 0;
                transition: all 0.3s ease;
                border-radius: 18px;
                z-index: -1;
            }

            .nav-link:hover {
                color: white;
                transform: translateY(-3px) translateZ(10px) scale(1.02);
                text-decoration: none;
                box-shadow: 0 8px 25px rgba(24, 119, 242, 0.3);
            }

                .nav-link:hover::before {
                    opacity: 1;
                    transform: scale(1);
                }

                .nav-link:hover::after {
                    opacity: 1;
                }

            .nav-link i {
                margin-right: 10px;
                font-size: 1.1rem;
                transition: all 0.3s ease;
            }

            .nav-link:hover i {
                transform: scale(1.1) rotate(5deg);
            }

        .floating-elements {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: -1;
        }

        .floating-circle {
            position: absolute;
            border-radius: 50%;
            background: linear-gradient(135deg, rgba(24, 119, 242, 0.08), rgba(66, 165, 245, 0.08));
            animation: float 8s ease-in-out infinite;
            box-shadow: 0 4px 20px rgba(24, 119, 242, 0.1);
        }

            .floating-circle:nth-child(1) {
                width: 120px;
                height: 120px;
                top: 15%;
                left: 8%;
                animation-delay: 0s;
            }

            .floating-circle:nth-child(2) {
                width: 180px;
                height: 180px;
                top: 55%;
                right: 12%;
                animation-delay: 2.5s;
            }

            .floating-circle:nth-child(3) {
                width: 90px;
                height: 90px;
                bottom: 25%;
                left: 18%;
                animation-delay: 5s;
            }

            .floating-circle:nth-child(4) {
                width: 150px;
                height: 150px;
                top: 25%;
                right: 25%;
                animation-delay: 1.5s;
            }

            .floating-circle:nth-child(5) {
                width: 60px;
                height: 60px;
                bottom: 15%;
                right: 8%;
                animation-delay: 4s;
            }

        .facebook-icon {
            position: absolute;
            color: rgba(24, 119, 242, 0.1);
            font-size: 2rem;
            animation: floatIcon 10s ease-in-out infinite;
        }

            .facebook-icon:nth-child(6) {
                top: 10%;
                left: 15%;
                animation-delay: 0s;
            }

            .facebook-icon:nth-child(7) {
                top: 30%;
                right: 20%;
                animation-delay: 3s;
            }

            .facebook-icon:nth-child(8) {
                bottom: 20%;
                left: 25%;
                animation-delay: 6s;
            }

            .facebook-icon:nth-child(9) {
                bottom: 35%;
                right: 15%;
                animation-delay: 2s;
            }

        @@keyframes float {
            0%, 100%

        {
            transform: translateY(0px) rotate(0deg) scale(1);
            opacity: 0.6;
        }

        33% {
            transform: translateY(-25px) rotate(120deg) scale(1.1);
            opacity: 0.8;
        }

        66% {
            transform: translateY(15px) rotate(240deg) scale(0.9);
            opacity: 0.7;
        }

        }

        @@keyframes floatIcon {
            0%, 100%

        {
            transform: translateY(0px) rotate(0deg);
            opacity: 0.1;
        }

        50% {
            transform: translateY(-20px) rotate(180deg);
            opacity: 0.2;
        }

        }

        @@keyframes slideInDown {
            from

        {
            opacity: 0;
            transform: translateY(-40px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .intro-text {
            text-align: center;
            max-width: 600px;
            margin: 0 auto 2rem;
            padding: 0 20px;
            animation: fadeInUp 1s ease-out 0.3s both;
        }

            .intro-text p {
                font-size: 1.1rem;
                color: var(--facebook-gray);
                line-height: 1.6;
                margin-bottom: 1.5rem;
            }

        .feature-cards {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-bottom: 3rem;
            flex-wrap: wrap;
            animation: fadeInUp 1s ease-out 0.6s both;
        }

        .feature-card {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 25px;
            text-align: center;
            box-shadow: var(--shadow-light);
            border: 1px solid rgba(24, 119, 242, 0.1);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            max-width: 280px;
            transform: translateY(0) rotateY(0deg);
        }

            .feature-card:hover {
                transform: translateY(-10px) rotateY(5deg);
                box-shadow: var(--shadow-heavy);
                border-color: rgba(24, 119, 242, 0.3);
            }

        .feature-icon {
            width: 70px;
            height: 70px;
            background: linear-gradient(135deg, var(--facebook-blue), var(--facebook-light-blue));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
            color: white;
            font-size: 1.8rem;
            box-shadow: 0 8px 20px rgba(24, 119, 242, 0.3);
            transition: all 0.3s ease;
        }

        .feature-card:hover .feature-icon {
            transform: scale(1.1) rotate(10deg);
        }

        .feature-title {
            font-size: 1.2rem;
            font-weight: 700;
            color: var(--facebook-dark);
            margin-bottom: 10px;
        }

        .feature-description {
            font-size: 0.95rem;
            color: var(--facebook-gray);
            line-height: 1.5;
        }

        @@media (max-width: 768px) {
            .page-title

        {
            font-size: 2.8rem;
        }

        .nav-link {
            padding: 14px 28px !important;
            font-size: 0.95rem;
            margin: 0 3px;
        }

        .feature-cards {
            flex-direction: column;
            align-items: center;
        }

        .floating-circle {
            opacity: 0.5;
        }

        .facebook-icon {
            display: none;
        }

        }

        @@media (max-width: 480px) {
            .nav-tabs

        {
            padding: 6px;
            margin: 0 10px;
        }

        .nav-link {
            padding: 12px 20px !important;
            font-size: 0.9rem;
        }

        .page-title {
            font-size: 2.2rem;
        }

        }
    </style>
</head>
<body>
    <div class="floating-elements">
        <div class="floating-circle"></div>
        <div class="floating-circle"></div>
        <div class="floating-circle"></div>
        <div class="floating-circle"></div>
        <div class="floating-circle"></div>
        <i class="fab fa-facebook facebook-icon"></i>
        <i class="fas fa-thumbs-up facebook-icon"></i>
        <i class="fas fa-heart facebook-icon"></i>
        <i class="fas fa-share facebook-icon"></i>
    </div>

    <div class="container main-container">
        <div class="page-header">
            <h1 class="page-title">Rabita Facebook Reviews</h1>
            <p class="page-subtitle">Sosial media rəyləri və müştəri təcrübələri</p>
        </div>

        <div class="intro-text">
            <p>Facebook platformasından toplanan müştəri rəylərini təhlil edin və biznes performansınızı izləyin.</p>
        </div>

        <div class="feature-cards">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <h3 class="feature-title">Analitik Təhlil</h3>
                <p class="feature-description">Rəylərin sentiment analizi və detaylı statistikalar</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-users"></i>
                </div>
                <h3 class="feature-title">Müştəri Məmnuniyyəti</h3>
                <p class="feature-description">Müştəri rəylərinin keyfiyyət qiymətləndirilməsi</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-star"></i>
                </div>
                <h3 class="feature-title">Reytinq Sistemi</h3>
                <p class="feature-description">Ulduz reytinqləri və məmnuniyyət səviyyəsi</p>
            </div>
        </div>

        <div class="nav-tabs-container">
            <ul class="nav nav-tabs" id="reviewsTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <a asp-controller="Facebook" asp-action="RabitaBusiness" class="nav-link">
                        <i class="fas fa-briefcase"></i>
                        RabitaBank Business
                    </a>
                </li>
                <li class="nav-item" role="presentation">
                    <a asp-controller="Facebook" asp-action="RabitaMobile" class="nav-link">
                        <i class="fas fa-mobile-alt"></i>
                        Rabita Mobile
                    </a>
                </li>
                <li class="nav-item" role="presentation">
                    <a asp-controller="FacebookReview" asp-action="RabitaFacebook" class="nav-link">
                        <i class="fab fa-facebook"></i>
                        Rabita Facebook
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Enhanced hover effects for navigation links
            document.querySelectorAll('.nav-link').forEach((link, index) => {
                link.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px) translateZ(20px) scale(1.05)';
                    this.style.boxShadow = '0 12px 35px rgba(24, 119, 242, 0.4)';
                });

                link.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0) translateZ(0) scale(1)';
                    this.style.boxShadow = 'none';
                });

                // Staggered animation for navigation items
                link.style.animation = `fadeInUp 0.8s ease-out ${index * 0.2 + 0.8}s both`;
            });

            // Parallax effect for floating elements
            window.addEventListener('mousemove', function(e) {
                const mouseX = e.clientX / window.innerWidth;
                const mouseY = e.clientY / window.innerHeight;

                document.querySelectorAll('.floating-circle').forEach((circle, index) => {
                    const speed = (index + 1) * 0.5;
                    const x = (mouseX - 0.5) * speed * 20;
                    const y = (mouseY - 0.5) * speed * 20;
                    circle.style.transform += ` translate(${x}px, ${y}px)`;
                });
            });

            // Add ripple effect to feature cards
            document.querySelectorAll('.feature-card').forEach(card => {
                card.addEventListener('click', function(e) {
                    const ripple = document.createElement('div');
                    const rect = card.getBoundingClientRect();
                    const size = 60;
                    const x = e.clientX - rect.left - size / 2;
                    const y = e.clientY - rect.top - size / 2;

                    ripple.style.cssText = `
                        position: absolute;
                        border-radius: 50%;
                        background: rgba(24, 119, 242, 0.3);
                        transform: scale(0);
                        animation: ripple 0.6s linear;
                        left: ${x}px;
                        top: ${y}px;
                        width: ${size}px;
                        height: ${size}px;
                        pointer-events: none;
                    `;

                    const style = document.createElement('style');
                    style.textContent = `
        @@keyframes ripple {
                            to {
                                transform: scale(4);
                                opacity: 0;
                            }
                        }
                    `;
                    document.head.appendChild(style);

                    card.style.position = 'relative';
                    card.appendChild(ripple);

                    setTimeout(() => {
                        ripple.remove();
                        style.remove();
                    }, 600);
                });
            });

            // Enhanced scroll animations
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.transform = 'translateY(0) scale(1)';
                        entry.target.style.opacity = '1';
                    }
                });
            }, observerOptions);

            // 3D tilt effect for nav-tabs container
            const navContainer = document.querySelector('.nav-tabs-container');
            if (navContainer) {
                navContainer.addEventListener('mousemove', function(e) {
                    const rect = this.getBoundingClientRect();
                    const x = e.clientX - rect.left;
                    const y = e.clientY - rect.top;
                    const centerX = rect.width / 2;
                    const centerY = rect.height / 2;
                    const rotateX = (y - centerY) / 20;
                    const rotateY = (centerX - x) / 20;

                    const navTabs = this.querySelector('.nav-tabs');
                    navTabs.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) translateZ(10px)`;
                });

                navContainer.addEventListener('mouseleave', function() {
                    const navTabs = this.querySelector('.nav-tabs');
                    navTabs.style.transform = 'perspective(1000px) rotateX(0deg) rotateY(0deg) translateZ(0px)';
                });
            }
        });
    </script>
</body>
</html>