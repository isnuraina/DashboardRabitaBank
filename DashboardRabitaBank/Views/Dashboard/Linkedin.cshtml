    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Enhanced navigation effects
            document.querySelectorAll('.nav-link').forEach((link, index) => {
                link.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-8px) translateZ(25px) scale(1.08)';
                    this.style.boxShadow = '0 15px 45px rgba(0, 119, 181, 0.5)';
                });

                link.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0) translateZ(0) scale(1)';
                    this.style.boxShadow = 'none';
                });

                // Staggered entrance animations
                link.style.animation = `fadeInUp 1s ease-out ${index * 0.3 + 1}s both`;
            });

            // Advanced parallax with mouse tracking
            let mouseX = 0, mouseY = 0;
            let targetX = 0, targetY = 0;

            document.addEventListener('mousemove', function(e) {
                mouseX = e.clientX / window.innerWidth;
                mouseY = e.clientY / window.innerHeight;
            });

            function animateParallax() {
                targetX += (mouseX - targetX) * 0.05;
                targetY += (mouseY - targetY) * 0.05;

                document.querySelectorAll('.floating-shape').forEach((shape, index) => {
                    const speed = (index + 1) * 0.3;
                    const x = (targetX - 0.5) * speed * 30;
                    const y = (targetY - 0.5) * speed * 30;
                    const rotation = (targetX - 0.5) * speed * 10;

                    shape.style.transform += ` translate(${x}px, ${y}px) rotate(${rotation}deg)`;
                });

                document.querySelectorAll('.linkedin-icon').forEach((icon, index) => {
                    const speed = (index + 1) * 0.2;
                    const x = (targetX - 0.5) * speed * 20;
                    const y = (targetY - 0.5) * speed * 20;

                    icon.style.transform += ` translate(${x}px, ${y}px)`;
                });

                requestAnimationFrame(animateParallax);
            }
            animateParallax();

            // Create floating particles
            function createParticle() {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 3 + 's';
                particle.style.animationDuration = (Math.random() * 3 + 4) + 's';

                const colors = ['rgba(0, 119, 181, 0.6)', 'rgba(55, 143, 233, 0.6)', 'rgba(245, 197, 66, 0.6)'];
                particle.style.background = colors[Math.floor(Math.random() * colors.length)];

                document.getElementById('particles').appendChild(particle);

                setTimeout(() => {
                    particle.remove();
                }, 8000);
            }

            setInterval(createParticle, 800);

            // Enhanced feature card interactions
            document.querySelectorAll('.feature-card').forEach((card, index) => {
                // Entrance animation
                card.style.animation = `fadeInUp 0.8s ease-out ${index * 0.2 + 1.2}s both`;

                // 3D tilt effect
                card.addEventListener('mousemove', function(e) {
                    const rect = this.getBoundingClientRect();
                    const x = e.clientX - rect.left;
                    const y = e.clientY - rect.top;
                    const centerX = rect.width / 2;
                    const centerY = rect.height / 2;
                    const rotateX = (y - centerY) / 15;
                    const rotateY = (centerX - x) / 15;

                    this.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) translateZ(20px)`;
                });

                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'perspective(1000px) rotateX(0deg) rotateY(0deg) translateZ(0px)';
                });

                // Advanced ripple effect with multiple waves
                card.addEventListener('click', function(e) {
                    const rect = this.getBoundingClientRect();
                    const size = Math.max(rect.width, rect.height);
                    const x = e.clientX - rect.left - size / 2;
                    const y = e.clientY - rect.top - size / 2;

                    // Create multiple ripple waves
                    for (let i = 0; i < 3; i++) {
                        setTimeout(() => {
                            const ripple = document.createElement('div');
                            ripple.style.cssText = `
                                position: absolute;
                                border-radius: 50%;
                                background: rgba(0, 119, 181, ${0.3 - i * 0.1});
                                transform: scale(0);
                                animation: rippleWave 1s ease-out;
                                left: ${x}px;
                                top: ${y}px;
                                width: ${size}px;
                                height: ${size}px;
                                pointer-events: none;
                                z-index: 1000;
                            `;

                            this.style.position = 'relative';
                            this.appendChild(ripple);

                            setTimeout(() => ripple.remove(), 1000);
                        }, i * 100);
                    }
                });

                // Magnetic attraction effect
                card.addEventListener('mouseenter', function() {
                    const icon = this.querySelector('.feature-icon');
                    icon.style.animation = 'none';
                    setTimeout(() => {
                        icon.style.animation = 'magneticPulse 0.6s ease-out';
                    }, 10);
                });
            });

            // Advanced 3D navigation container effects
            const navContainer = document.querySelector('.nav-tabs-container');
            if (navContainer) {
                let isHovering = false;

                navContainer.addEventListener('mouseenter', function() {
                    isHovering = true;
                    this.style.transform = 'scale(1.02)';
                });

                navContainer.addEventListener('mouseleave', function() {
                    isHovering = false;
                    this.style.transform = 'scale(1)';
                    const navTabs = this.querySelector('.nav-tabs');
                    navTabs.style.transform = 'perspective(1500px) rotateX(0deg) rotateY(0deg) translateZ(0px)';
                });

                navContainer.addEventListener('mousemove', function(e) {
                    if (!isHovering) return;

                    const rect = this.getBoundingClientRect();
                    const x = e.clientX - rect.left;
                    const y = e.clientY - rect.top;
                    const centerX = rect.width / 2;
                    const centerY = rect.height / 2;
                    const rotateX = (y - centerY) / 25;
                    const rotateY = (centerX - x) / 25;

                    const navTabs = this.querySelector('.nav-tabs');
                    navTabs.style.transform = `perspective(1500px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) translateZ(15px)`;
                });
            }

            // Scroll-triggered animations
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -100px 0px'
            };

            const scrollObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.transform = 'translateY(0) scale(1)';
                        entry.target.style.opacity = '1';

                        // Add special effects for different elements
                        if (entry.target.classList.contains('feature-card')) {
                            entry.target.style.animation = 'slideInScale 0.8s ease-out both';
                        }
                    }
                });
            }, observerOptions);

            // Dynamic background color shifts
            let colorShiftIndex = 0;
            const backgroundColors = [
                'linear-gradient(135deg, #f8fbff 0%, #e8f4f8 30%, #daf1ff 70%, #cce7f0 100%)',
                'linear-gradient(135deg, #fff8f0 0%, #f8f0e8 30%, #fff1da 70%, #f0e7cc 100%)',
                'linear-gradient(135deg, #f0f8ff 0%, #e8f4f8 30%, #daf1ff 70%, #cce7f0 100%)'
            ];

            setInterval(() => {
                colorShiftIndex = (colorShiftIndex + 1) % backgroundColors.length;
                document.body.style.background = backgroundColors[colorShiftIndex];
            }, 10000);

            // Interactive title effects
            const pageTitle = document.querySelector('.page-title');
            if (pageTitle) {
                let titleHover = false;

                pageTitle.addEventListener('mouseenter', function() {
                    titleHover = true;
                    this.style.transform = 'scale(1.05) translateY(-5px)';
                    this.style.textShadow = '0 8px 30px rgba(0, 119, 181, 0.4)';
                });

                pageTitle.addEventListener('mouseleave', function() {
                    titleHover = false;
                    this.style.transform = 'scale(1) translateY(0)';
                    this.style.textShadow = '0 4px 20px rgba(0, 119, 181, 0.2)';
                });

                // Glowing text effect on click
                pageTitle.addEventListener('click', function() {
                    this.style.animation = 'none';
                    setTimeout(() => {
                        this.style.animation = 'titleGlow 1.5s ease-out';
                    }, 10);
                });
            }

            // Ambient sound visualization (visual only)
            function createSoundWave() {
                const wave = document.createElement('div');
                wave.style.cssText = `
                    position: fixed;
                    bottom: 20px;
                    left: ${Math.random() * 100}%;
                    width: 4px;
                    height: 20px;
                    background: linear-gradient(to top, rgba(0, 119, 181, 0.6), transparent);
                    border-radius: 2px;
                    animation: soundWave ${Math.random() * 2 + 1}s ease-in-out infinite;
                    pointer-events: none;
                    z-index: 1000;
                `;

                document.body.appendChild(wave);

                setTimeout(() => wave.remove(), 3000);
            }

            setInterval(createSoundWave, 300);

            // Advanced CSS animations
            const style = document.createElement('style');
            style.textContent = `
        @@keyframes rippleWave {
                    to {
                        transform: scale(2);
                        opacity: 0;
                    }
                }

        @@keyframes magneticPulse {
                    0% { transform: scale(1); }
                    50% { transform: scale(1.2) rotate(10deg); }
                    100% { transform: scale(1.15) rotate(15deg); }
                }

        @@keyframes slideInScale {
                    from {
                        opacity: 0;
                        transform: translateY(50px) scale(0.8);
                    }
                    to {
                        opacity: 1;
                        transform: translateY(0) scale(1);
                    }
                }

        @@keyframes titleGlow {
                    0%, 100% {
                        filter: brightness(1);
                        text-shadow: 0 4px 20px rgba(0, 119, 181, 0.2);
                    }
                    50% {
                        filter: brightness(1.3);
                        text-shadow: 0 0 30px rgba(0, 119, 181, 0.8), 0 0 60px rgba(55, 143, 233, 0.6);
                    }
                }

        @@keyframes soundWave {
                    0%, 100% {
                        height: 10px;
                        opacity: 0.3;
                    }
                    50% {
                        height: ${Math.random() * 40 + 20}px;
                        opacity: 0.8;
                    }
                }

                .nav-link {
                    position: relative;
                    overflow: hidden;
                }

                .nav-link::before {
                    content: '';
                    position: absolute;
                    top: 0;
                    left: -100%;
                    width: 100%;
                    height: 100%;
                    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
                    transition: left 0.5s;
                }

                .nav-link:hover::before {
                    left: 100%;
                }

        @@keyframes breathe {
                    0%, 100% {
                        transform: scale(1);
                        opacity: 0.7;
                    }
                    50% {
                        transform: scale(1.1);
                        opacity: 1;
                    }
                }

                .floating-shape:nth-child(even) {
                    animation: breathe 4s ease-in-out infinite;
                }
            `;
            document.head.appendChild(style);

            // Performance optimization
            let ticking = false;

            function updateAnimations() {
                // Update any continuous animations here
                ticking = false;
            }

            function requestTick() {
                if (!ticking) {
                    requestAnimationFrame(updateAnimations);
                    ticking = true;
                }
            }

            // Lazy load heavy animations
            setTimeout(() => {
                document.querySelectorAll('.floating-shape').forEach(shape => {
                    shape.style.animationPlayState = 'running';
                });
            }, 1000);

            console.log('🚀 LinkedIn Reviews UI loaded with advanced interactions!');
        });
    </script>
</body>
